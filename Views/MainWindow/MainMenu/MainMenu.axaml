<UserControl xmlns="https://github.com/avaloniaui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="lab4.MainWindowSpace.MainMenu">
    <Grid RowDefinitions="Auto,*, Auto">
        <!-- Top панель -->
        <Grid VerticalAlignment="Top" Height="60" Margin="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> 
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Кнопка перезавантаження -->
                <Button Background="#7ae7e7e7" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Click="UpdateButton">
                    <Image
                        Source="avares://lab4/Assets/images/loading.png"
                        Stretch="Uniform"
                        Width="25"
                        Name="UpSpinner"
                        Height="25"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <Image.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Image.RenderTransform>
                    </Image>
                </Button>
            <!-- Кнопка "New statement" по центру -->
            <Button
                Classes="no-tab"
                Content="Створити заявку на продаж" 
                Click="CreateNewStatementPurch"
                Height="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Grid.Column="1" />
            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                <!-- history -->
                <Button Background="#7ae7e7e7" Margin="5,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" Click="History">
                    <Image
                        Source="avares://lab4/Assets/images/history.png"
                        Stretch="Uniform"
                        Width="25" 
                        Height="25"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Button>
                <!-- msg -->
                <Button Background="#7ae7e7e7" Margin="5,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image
                        Source="avares://lab4/Assets/images/message.png"
                        Stretch="Uniform"
                        Width="25" 
                        Height="25"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Button>
                <!-- вихід -->
                <Button
                    Classes="no-tab"
                    Content="Вихід" 
                    Width="60" 
                    Height="40"
                    VerticalAlignment="Center" 
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Margin="5"
                    Click="ExitToSignUp"
                    Grid.Column="1" />
            </StackPanel>
        </Grid>
        <!-- blocks -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="BlocksPanel" Orientation="Vertical" Margin="10"/>
        </ScrollViewer>

        <Image Name="SpinnerDown"
               Source="avares://lab4/Assets/images/loader.png"
               Margin="20"
               Grid.Row="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Width="32" Height="32"
               IsVisible="False">
            <Image.RenderTransform>
                <RotateTransform Angle="0"/>
            </Image.RenderTransform>
        </Image>
        <Border Background="#22FF4B4B"
                CornerRadius="6"
                Padding="8"
                Margin="20"
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                MaxWidth="300"
                IsVisible="false"
                Name="BorderBlock">
            <TextBlock Name="TextBlock"
                       Foreground="#FF4B4B"
                       FontSize="14"
                       FontWeight="Bold"
                       Text=""
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
    <UserControl.Styles>
        <Style Selector="Button.no-tab">
            <Setter Property="IsTabStop" Value="False" />
        </Style>
    </UserControl.Styles>
</UserControl>
