<UserControl xmlns="https://github.com/avaloniaui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="lab4.MainWindowSpace.MainMenu"
             >
    <Grid>
        <!-- Top панель -->
        <Grid VerticalAlignment="Top" Height="60" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> 
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Кнопка перезавантаження -->
            <Border Background="#636363" CornerRadius="10" Margin="5" HorizontalAlignment="Left" 
                VerticalAlignment="Center" Grid.Column="0">
                    <Border.Styles>
                        <Style Selector="Border:pointerover Image">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Style>
                    </Border.Styles>
                    <Image
                        Source="avares://lab4/Assets/images/loading.png"
                        Stretch="Uniform"
                        Width="25" 
                        Height="25"
                        Cursor="Hand"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Grid.Column="0" />
                </Border> 
            <!-- Кнопка "New statement" по центру -->
            <Button
                Classes="no-tab"
                Content="Створити заявку" 
                Width="140" 
                Height="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Grid.Column="1" />
            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Border Background="#636363" CornerRadius="10" Margin="5" HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                    
                    <Border.Styles>
                        <Style Selector="Border:pointerover Image">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Style>
                    </Border.Styles>
                    <Image
                        Source="avares://lab4/Assets/images/message.png"
                        Stretch="Uniform"
                        Width="25" 
                        Height="25"
                        Cursor="Hand"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="0" />
                </Border>
                <Button
                    Classes="no-tab"
                    Content="Вихід" 
                    Width="60" 
                    Height="40"
                    VerticalAlignment="Center" 
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Margin="5"
                    Grid.Column="1" />
            </StackPanel>
        </Grid>    
    </Grid>
    <UserControl.Styles>
        <Style Selector="Button.no-tab">
            <Setter Property="IsTabStop" Value="False" />
        </Style>
    </UserControl.Styles>
</UserControl>
